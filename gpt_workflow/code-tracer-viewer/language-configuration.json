{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" }
  ],
  "surroundingPairs": [
    { "open": "[", "close": "]" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\[ENTER\\]",
    "decreaseIndentPattern": "^\\[LEAVE\\]"
  }
}